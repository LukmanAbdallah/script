SLACL INTEGRATION 1

pipeline {
    agent any

    environment {
        WAR_FILE = 'target/linkpay.war'        // WAR file path
        MAVEN_TOOL = 'maven3.9.11'             // Maven tool name
        SLACK_CHANNEL = '#philbuild'           // Your Slack channel
    }

    stages {
        // Stage 1: Git Build
        stage('1. Git Build') {
            steps {
                git branch: 'main', url: 'https://github.com/code9Bruno/pipeline1.git'
            }
        }

        // Stage 2: Maven Build
        stage('2. Maven Build') {
            steps {
                withMaven(maven: "${MAVEN_TOOL}") {
                    sh "mvn clean package -Dmaven.test.skip=true"
                }
            }
        }

        // Stage 3: SonarQube Analysis (optional)
        stage('3. SonarQube Analysis') {
            steps {
                echo "‚è© Skipping SonarQube analysis for now..."
            }
        }

        // Stage 4: Deploy to Nexus (optional)
        stage('4. Deploy to Nexus') {
            steps {
                echo "‚è© Skipping Nexus deployment for now..."
            }
        }

        // Stage 5: Deploy to Test Tomcat
        stage('5. Deploy to Test Tomcat') {
            steps {
                echo "üöÄ Deploying WAR to TEST Tomcat server..."
                deploy adapters: [
                    tomcat9(
                        credentialsId: 'tomcat-new',
                        url: 'http://tomcat9:8080/'
                    )
                ],
                contextPath: 'linkpay-test',
                war: "${WAR_FILE}"
            }
        }

        // Stage 6: Manual Approval Before Production
        stage('6. Manual Approval Before Production') {
            steps {
                script {
                    // üü° Notify Slack before approval
                    slackSend(
                        channel: "${SLACK_CHANNEL}",
                        message: "üü° *AWAITING APPROVAL:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Waiting for manual approval to deploy to *PRODUCTION*.",
                        color: '#e6c300'
                    )

                    // üïí Wait for manual approval (10 min timeout)
                    timeout(time: 10, unit: 'MINUTES') {
                        input message: "‚úÖ Approve deployment to PRODUCTION Tomcat?"
                    }

                    // ‚úÖ Notify Slack after approval
                    slackSend(
                        channel: "${SLACK_CHANNEL}",
                        message: "üü¢ *APPROVED:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Proceeding with *PRODUCTION* deployment.",
                        color: 'good'
                    )
                }
            }
        }

        // Stage 7: Deploy to Production Tomcat
        stage('7. Deploy to Production Tomcat') {
            steps {
                echo "üöÄ Deploying WAR to PRODUCTION Tomcat server..."
                deploy adapters: [
                    tomcat9(
                        credentialsId: 'tomcat-new',
                        url: 'http://tomcat-PROD:8080/'
                    )
                ],
                contextPath: 'linkpay',
                war: "${WAR_FILE}"
            }
        }
    }

    // üü© Slack Notifications
    post {
        success {
            slackSend(
                channel: "${SLACK_CHANNEL}",
                message: "‚úÖ *SUCCESS:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Deployment completed successfully!",
                color: 'good'
            )
        }
        failure {
            slackSend(
                channel: "${SLACK_CHANNEL}",
                message: "‚ùå *FAILED:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Check Jenkins logs for details.",
                color: 'danger'
            )
        }
        unstable {
            slackSend(
                channel: "${SLACK_CHANNEL}",
                message: "‚ö†Ô∏è *UNSTABLE:* ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                color: 'warning'
            )
        }
    }
}


SLACK INTEGRATION 2

pipeline {
    agent any

    environment {
        WAR_FILE = 'target/linkpay.war'        // WAR file path
        MAVEN_TOOL = 'maven3.9.11'             // Maven tool name
        SLACK_CHANNEL = '#philbuild'           // Slack channel
    }

    stages {
        stage('1. Git Build') {
            steps {
                git branch: 'main', url: 'https://github.com/code9Bruno/pipeline1.git'
            }
        }

        stage('2. Maven Build') {
            steps {
                withMaven(maven: "${MAVEN_TOOL}") {
                    sh "mvn clean package -Dmaven.test.skip=true"
                }
            }
        }

        stage('3. SonarQube Analysis') {
            steps {
                echo "‚è© Skipping SonarQube analysis for now..."
            }
        }

        stage('4. Deploy to Nexus') {
            steps {
                echo "‚è© Skipping Nexus deployment for now..."
            }
        }

        stage('5. Deploy to Test Tomcat') {
            steps {
                echo "üöÄ Deploying WAR to TEST Tomcat server..."
                deploy adapters: [
                    tomcat9(
                        credentialsId: 'tomcat-new',
                        url: 'http://tomcat9:8080/'
                    )
                ],
                contextPath: 'linkpay-test',
                war: "${WAR_FILE}"
            }
        }

        stage('6. Manual Approval Before Production') {
            steps {
                script {
                    slackSend(
                        channel: "${SLACK_CHANNEL}",
                        message: "üü° *AWAITING APPROVAL:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Waiting for manual approval to deploy to *PRODUCTION*.",
                        color: '#e6c300'
                    )

                    timeout(time: 10, unit: 'MINUTES') {
                        input message: "‚úÖ Approve deployment to PRODUCTION Tomcat?"
                    }

                    slackSend(
                        channel: "${SLACK_CHANNEL}",
                        message: "üü¢ *APPROVED:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Proceeding with *PRODUCTION* deployment.",
                        color: 'good'
                    )
                }
            }
        }

        stage('7. Deploy to Production Tomcat') {
            steps {
                echo "üöÄ Deploying WAR to PRODUCTION Tomcat server..."
                deploy adapters: [
                    tomcat9(
                        credentialsId: 'tomcat-new',
                        url: 'http://tomcat-PROD:8080/'
                    )
                ],
                contextPath: 'linkpay',
                war: "${WAR_FILE}"
            }
        }
    }

    post {
        success {
            slackSend(channel: "${SLACK_CHANNEL}", message: "‚úÖ *SUCCESS:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Deployment completed successfully!", color: 'good')
        }
        failure {
            slackSend(channel: "${SLACK_CHANNEL}", message: "‚ùå *FAILED:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî Check Jenkins logs for details.", color: 'danger')
        }
        unstable {
            slackSend(channel: "${SLACK_CHANNEL}", message: "‚ö†Ô∏è *UNSTABLE:* ${env.JOB_NAME} #${env.BUILD_NUMBER}", color: 'warning')
        }
    }
}



